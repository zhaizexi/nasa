// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic {
  id       String  @id @default(uuid())
  name     String  @unique
  title    String  @unique
  subtitle String
  maskUrl  String?
  news     News[]
  missions Mission[]
}

model Slide {
  id       String  @id @default(uuid())
  title    String  @unique
  url      String
  videoUrl String
  active   Boolean @default(true)
}

model News {
  id      String @id @default(uuid())
  title   String @unique
  content String
  maskUrl String
  topicId String
  topic   Topic? @relation(fields: [topicId], references: [id])
}

model Target {
  id        String    @id @default(uuid())
  name      String
  imgUrl    String
  indisplay Boolean   @default(true)
  missions  Mission[]
}

enum MissionStatus {
  past
  current
  future
  proposed
}

enum MissionType {
  Orbiter
  Instrument
  FlybySpacecraft
  LanderRover
  TechnologyDemonstration
  CubeSatSmallSat
  Groundbased
  Lander
  Rover
  Airborne
  Infrastructure
}

model Mission {
  id          String        @id @default(uuid())
  name        String        @unique
  maskUrl     String        @default("")  
  abbr        String?
  href        String?
  description String?
  content     String
  launchDate  DateTime      @db.Date
  targetId    String
  target      Target?       @relation(fields: [targetId], references: [id])
  topicId     String
  topic       Topic?        @relation(fields: [topicId], references: [id])
  status      MissionStatus @default(current)
  type        MissionType
  relateSite  Json?     
  instruments String[]      @default([])
}
